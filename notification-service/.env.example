#### Notification service environment example
# Copy to notification-service/.env and set real values before starting

# HTTP port for notification service
PORT=8083

# JWT secret (if notifications validate tokens)
JWT_SECRET=changeme

# Node environment
NODE_ENV=development

# RabbitMQ / AMQP URL used for receiving messages
MESSAGE_BROKER_URL=amqp://localhost

# Optional: Sendinblue / Brevo API key (if using)
SENDINBLUE_APIKEY=

# Default email sender address
EMAIL_FROM=notifications@example.com

# SMTP settings for nodemailer (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Notifications queue name (defaults to NOTIFICATIONS)
NOTIFICATIONS_QUEUE=NOTIFICATIONS
